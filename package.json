{
  "license": "Apache-2.0",
  "private": true,
  "version": "0.0.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "linkCompare": false,
          "linkReferences": false,
          "writerOpts": {
            "commitPartial": "* {{#if scope}}**{{scope}}:** {{/if}}{{subject}}{{#if references}}, closes{{#each references}} #{{this.issue}}{{/each}}{{/if}}\n"
          }
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "git add CHANGELOG.md && prettier || git add CHANGELOG.md && prettier"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i nitpick/dummy.py -re 's/^__version__ =.+$/__version__ = \"${nextRelease.version}\"/'"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "nitpick/dummy.py"
          ]
        }
      ]
    ]
  }
}
